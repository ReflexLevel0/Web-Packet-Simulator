<UserControl x:Class="WebPacketSimulator.Wpf.AnimationSpeedUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebPacketSimulator.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Button Content="&lt;" Click="SlowDownAnimationButton_Click"/>
        <TextBlock Text="{Binding AnimationSpeed, StringFormat={}{0:F2}x}"/>
        <Button Content="&gt;" Click="SpeedUpAnimationButton_Click"/>
    </StackPanel>
</UserControl>